@model JCleanLaundry.Models.ProsesSatuanViewModel

@{
    ViewBag.Title = "Cetak Transaksi";
}

<h2>
    <i class="fa fa-shopping-basket transaksi_image-title" aria-hidden="true"></i> Cetak Transaksi
</h2>
<hr />

<div class="col-xs-12 cetak-transaksi_div-container">
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a aria-expanded="false">
                        <i class="fa fa-credit-card" aria-hidden="true"></i> Nota
                    </a>
                </h4>
            </div>
            <div>
                <div class="panel-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Kode, new { @class = "control-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.DisplayFor(m => m.Kode)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Pelanggan, new { @class = "control-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.DisplayFor(m => m.Pelanggan.Nama) (@Html.DisplayFor(m => m.Pelanggan.Hp))
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.TanggalMasuk, new { @class = "control-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.DisplayFor(m => m.TanggalMasuk)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.TanggalSelesai, new { @class = "control-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.DisplayFor(m => m.TanggalSelesai)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.NamaCounter, new { @class = "control-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.DisplayFor(m => m.NamaCounter) (@Html.DisplayFor(m => m.Staff))
                            </div>
                        </div>

                        <hr />

                        <div id="cetak-transaksi_div-detil">
                            <table class="table table-striped table-hover table-bordered" id="cetak-transaksi_table-detil">
                                <caption>Detil Cucian</caption>
                                <thead>
                                    <tr>
                                        <td>No</td>
                                        <td>Tipe</td>
                                        <td>Item</td>
                                        <td>Jumlah</td>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{
                                        var no = 1;
                                    }

                                    @foreach (var detil in Model.Detail)
                                    {
                                        <tr>
                                            <td>@no</td>
                                            <td>@detil.Barang.TipeCuciNama</td>
                                            <td>@detil.Barang.Nama</td>
                                            <td>@detil.Jumlah</td>
                                        </tr>

                                        no += 1;
                                    }
                                </tbody>
                            </table>
                        </div>

                        <hr />

                        <div class="form-group">
                            @Html.LabelFor(m => m.UangMuka, new { @class = "control-label col-sm-3" })
                            <div class="col-sm-9">
                                Rp @String.Format("{0:0,0.00}", Model.UangMuka)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.TotalBayar, new { @class = "control-label col-sm-3" })
                            <div class="col-sm-9">
                                Rp @String.Format("{0:0,0.00}", Model.TotalBayar)
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

    <div class="transaksi_div-aksi">
        <button class="btn btn-primary btn-lg cetak-transaksi_btn-cetak"><i class="fa fa-floppy-o" aria-hidden="true"></i> Cetak</button>
    </div>

</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/datatable")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/cetaktransaksi")