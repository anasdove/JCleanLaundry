
@{
    ViewBag.Title = "Menu Utama";
}

<h2><i class="fa fa-home" aria-hidden="true"></i> Menu Utama
</h2>

<div class="container menu-utama">
    <div class="row">
        <div class="col-xs-6 menu-utama_div-kiri">
            @using (Html.BeginForm("CuciBaru", "Transaction", FormMethod.Get))
            {
                <button class="btn-primary btn-lg menu-utama_btn menu-utama_btn-cuci-baru" type="submit">
                    <i class="fa fa-shopping-basket" aria-hidden="true"></i>
                </button>
            }
            <div class="menu-utama_div-text">
                CUCI BARU
            </div>
        </div>

        <div class="col-xs-6 menu-utama_div-kanan">
            @using (Html.BeginForm("CariCucian", "Transaction", FormMethod.Get))
            {
                <button class="btn-primary btn-lg menu-utama_btn menu-utama_btn-cari" type="submit">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>
            }
            <div class="menu-utama_div-text">
                CARI CUCIAN
            </div>
        </div>

        <div class="col-xs-6 menu-utama_div-kiri">
            @using (Html.BeginForm("Pengecekan", "Transaction", FormMethod.Get))
            {
                <button class="btn-primary btn-lg menu-utama_btn menu-utama_btn-pengecekan" type="submit">
                    <i class="fa fa-check-square" aria-hidden="true"></i>
                </button>
            }
            <div class="menu-utama_div-text">
                PENGECEKAN
            </div>
        </div>

        <div class="col-xs-6 menu-utama_div-kanan">
            @using (Html.BeginForm("Laporan", "Transaction", FormMethod.Get))
            {
                <button class="btn-primary btn-lg menu-utama_btn menu-utama_btn-laporan" type="submit">
                    <i class="fa fa-file" aria-hidden="true"></i>
                </button>
            }
            <div class="menu-utama_div-text">
                LAPORAN
            </div>
        </div>

        <div class="col-xs-6 menu-utama_div-kiri">
            @using (Html.BeginForm("Index", "Barang", FormMethod.Get))
            {
                <button class="btn-primary btn-lg menu-utama_btn menu-utama_btn-tambah-barang" type="submit">
                    <i class="fa fa-black-tie" aria-hidden="true"></i>
                </button>
            }
            <div class="menu-utama_div-text">
                DAFTAR BARANG
            </div>
        </div>

        <div class="col-xs-6 menu-utama_div-kiri">
            @using (Html.BeginForm("Pelanggan", "Transaction", FormMethod.Get))
            {
                <button class="btn-primary btn-lg menu-utama_btn menu-utama_btn-pelanggan" type="submit">
                    <i class="fa fa-users" aria-hidden="true"></i>
                </button>
            }
            <div class="menu-utama_div-text">
                PELANGGAN
            </div>
        </div>

    </div>
</div>

